{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "DOM.Iterable", "ES6"],

    "module": "node18",
    "moduleResolution": "node16",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "exclude": ["dist/"],
}
